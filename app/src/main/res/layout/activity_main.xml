<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient" >

    <ImageView
        android:id="@+id/ImageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity3"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ImageViewU"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/Llh1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ImageView1"
        >

        <ImageView
            android:id="@+id/ImageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:adjustViewBounds="true"
            android:src="@drawable/earth11" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:textColor="#18FFFF"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:layout_gravity="start"
            android:text="@string/slogan1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Llh2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true" >
        <ImageView
            android:id="@+id/ImageView3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/job6" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#18FFFF"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:padding="10dp"
            android:text="@string/slogan2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView66"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/Llh4"
        android:layout_toStartOf="@+id/Llh4"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:src="@drawable/address2" />

    <LinearLayout
        android:id="@+id/Llh33"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="1dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="1dp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:textColor="#18FFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:text="@string/website" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Llh3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_above="@id/Llh33"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="1dp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:textColor="#18FFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:text="@string/tel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Llh4"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_above="@id/Llh3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="1dp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#18FFFF"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:text="@string/adr2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Llh5"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_above="@id/Llh4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="1dp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:textColor="#18FFFF"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:text="@string/adr1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Llh6"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_above="@id/Llh5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:textColor="#18FFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:text="@string/udacity"
/>
    </LinearLayout>

</RelativeLayout>
